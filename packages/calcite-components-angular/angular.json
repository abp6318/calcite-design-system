{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "@esri/calcite-components-angular": {
      "projectType": "library",
      "root": "projects/output-target",
      "sourceRoot": "projects/output-target/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/output-target/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/output-target/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/output-target/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    }
  }
}
